{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "table",
	"title": "Table",
	"description": "",
	"definitions": {
		"row": {
			"$id": "#row",
			"title": "Weighted Value Row",
			"description": "",
			"type": "object",
			"required": [
				"value"
			],
			"properties": {
				"weight": {
					"type": "number",
					"default": 1
				},
				"value": {
					"oneOf": [
						{
							"type": "string"
						},
						{
							"type": "object"
						}
					]
				}
			}
		}
	},
	"type": "object",
	"required": [
		"rows", "values"
	],
	"properties": {
		"rows": {
			"type": "array",
			"items": {
				"$ref": "#row"
			}
		},
		"values": {
			"type": "object",
			"patternProperties": {
				".*": {
					"type": "object",
					"required": [],
					"properties": {
						"modifiers": {
							"type": "object"
						},
						"value": {
							"$comment": "Overrides the initial key value with some data."
						}
					}
				}
			}
		}
	}
}