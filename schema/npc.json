{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "npc",
	"title": "Npc",
	"description": "A generated NPC with various properties",
	"definitions": {
		"roll": {
			"$id": "#roll",
			"title": "Roll",
			"description": "Syntax for indicating a random value from a table. The capture group is the table file name without the extension.",
			"$comment": "TODO: this needs function in generator",
			"type": "string",
			"pattern": "^\\{roll:(.*)\\}$"
		},
		"fieldObject": {
			"$id": "#fieldObject",
			"title": "Field Object",
			"description": "",
			"anyOf": [
				{
					"$ref": "#roll"
				},
				{
					"type": "number"
				},
				{
					"type": "string"
				},
				{
					"type": "array"
				},
				{
					"type": "object",
					"patternProperties": {
						".*": {
							"$ref": "#fieldObject"
						}
					}
				}
			]
		},
		"field": {
			"$id": "#field",
			"title": "Field",
			"description": "",
			"type": "object",
			"properties": {
				"default": {
					"$ref": "#fieldObject"
				},
				"value": {
					"$ref": "#fieldObject"
				}
			}
		},
		"fieldCategory": {
			"$id": "#fieldCategory",
			"title": "Field Category",
			"description": "",
			"type": "object",
			"patternProperties": {
				".*": {
					"$ref": "#field"
				}
			}
		}
	},
	"type": "object",
	"required": [
		"fields",
		"generationOrder"
	],
	"properties": {
		"fields": {
			"type": "object",
			"required": [
				"stats",
				"identity",
				"description",
				"relationships",
				"hooks"
			],
			"patternProperties": {
				".*": {
					"anyOf": [
						{
							"$ref": "#fieldCategory"
						},
						{
							"$ref": "#field"
						}
					]
				}
			},
			"additionalProperties": false
		},
		"generationOrder": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	}
}