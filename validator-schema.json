{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "validator",
	"title": "Validator",
	"description": "The schema for the validator json.",

	"definitions": {
		"url": {
			"type": "string",
			"pattern": "^[^\\.]+\\.json$"
		}
	},

	"type": "array",
	"items": {
		"type": "object",
		"required": [ "key", "schema", "data" ],
		"minItems": 0,
		"uniqueItems": true,
		"properties": {
			"key": { "type": "string" },
			"schema": { "$ref": "#/definitions/url" },
			"data": {
				"type": "array",
				"minItems": 0,
				"uniqueItems": true,
				"items": { "$ref": "#/definitions/url" }
			}
		}
	}
}